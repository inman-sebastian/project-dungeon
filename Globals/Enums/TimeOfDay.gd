extends Node

enum Enum {
	Midnight,   # 00:00 — Start of new day
	LateNight,  # 02:00 — Deep night stillness
	PreDawn,    # 04:00 — Darkest before sunrise
	Sunrise,    # 05:00 — Sun just cresting
	Morning,    # 08:00 — Full daylight begins
	Noon,       # 12:00 — Sun at peak
	Afternoon,  # 14:00 — Bright afternoon light
	Evening,    # 17:00 — Light begins to warm
	Sunset,     # 18:30 — Sun hits horizon
	Dusk,       # 19:30 — Fading light
	Night       # 21:00 — Full darkness
}
